@model Bootcamp
            <div class="card mb-3" id="kurs_@Model.Id">
                <div class="row">
                    <div class="col-md-3">
                        <img src="~/img/@Model.Image" class="img-fluid rounded-start" alt="My image" />
                    </div>
                    <div class="col-md-9">
                        <div class="card-body">
                            <a asp-controller="Bootcamp" asp-action="Details" asp-route-id="@Model.Id">
                        <h3>@Model.Title</h3>
                             </a>
                        <p>@Model.Description</p> 
                        </div>
                    </div>
                </div>
            </div>     
