<!-- Views/Shipping/Create.cshtml -->
@model ShopAppProject.Data.Shipping

@{
    ViewData["Title"] = "Create Shipping Option";
}

<h2>Create Shipping Option</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ShippingMethodName"></label>
        <input asp-for="ShippingMethodName" class="form-control" />
        <span asp-validation-for="ShippingMethodName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingCost"></label>
        <input asp-for="ShippingCost" class="form-control" />
        <span asp-validation-for="ShippingCost" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
