@model ShopAppProject.Data.Deals

<h2>Delete Deals</h2>

<div>
    <h3>Are you sure you want to delete this Deals?</h3>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.DealsId</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.DealsName</dd>
        <dt class="col-sm-2">Discount Percentage</dt>
        <dd class="col-sm-10">@Model.DiscountPercentage</dd>
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate</dd>
        <!-- Add other properties as needed -->
    </dl>
    <form asp-action="Delete" asp-route-id="@Model.DealsId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index">Back to List</a>
    </form>
</div>
