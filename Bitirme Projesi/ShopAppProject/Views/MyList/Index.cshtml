<!--/Views/MyList/Index.cshtml-->
@model List<ShopAppProject.Data.UserProductList>

<h1>Listem</h1>

@if (Model.Count == 0)
{
    <p>Listeniz Boş</p>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Ürün</th>
                            <th>Stok</th>
                            <th>Fiyat</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var userProduct in Model)
                        {
                            @Html.Partial("_UserProductListItem", userProduct)
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
