<!--Views/Product/Delete.cshtml-->

@model Product

<h2>Delete Ürün</h2>

<h3>Bu ürünü silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Ürün Detayları:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ürün Id:
        </dt>
        <dd class="col-sm-10">
            @Model.ProductId
        </dd>
        <dt class="col-sm-2">
            Ürün Adı:
        </dt>
        <dd class="col-sm-10">
            @Model.ProductTitle
        </dd>
        
        <!-- Diğer ürün detaylarını buraya ekleyebilirsiniz. -->
    </dl>
</div>

<form asp-action="Delete" asp-route-id="@Model.ProductId" method="post">
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
