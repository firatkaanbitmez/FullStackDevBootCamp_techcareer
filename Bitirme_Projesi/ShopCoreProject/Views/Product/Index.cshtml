<!--Product/Index cshtml-->
@model List<Product>

@{
    ViewData["Title"] = "Ürünler";
}

<div class="container mt-5">
    <h2>Ürünler</h2>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="https://via.placeholder.com/150" class="card-img-top" alt="Ürün Resmi">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-primary">Detaylar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
