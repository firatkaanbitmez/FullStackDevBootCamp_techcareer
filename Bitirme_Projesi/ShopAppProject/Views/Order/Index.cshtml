<!-- Views/Order/Index.cshtml -->

@model List<Order>

@{
    // Order the Model by OrderDate in descending order
    var sortedOrders = Model.OrderByDescending(o => o.OrderDate).ToList();
}

<div class="container mt-4">
    <h2>Siparişlerim / Takip</h2>
    <hr>

    <!-- Loop through sorted orders -->
    @foreach (var order in sortedOrders)
    {
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                Sipariş ID: @order.Id
            </div>
            <div class="card-body">
                <h6 class="card-title">Takip Numarası: @order.Id</h6>
                <p class="card-text"><strong>Toplam Ürün Adedi:</strong> @order.Quantity</p>
                <p class="card-text"><strong>Sipariş Tarihi:</strong> @order.OrderDate.ToString("dd/MM/yyyy HH:mm:ss")</p>
                <!-- Add more order details as needed -->

                <hr>

                <!-- Link to view product details or track shipment -->
                <a href="@Url.Action("Details", "Order", new { id = order.ProductId })" class="btn btn-info" data-abc="true">
                    <i class="fa fa-eye"></i> Sipariş Detayları
                </a>
            </div>
        </div>
    }

    <!-- Link to go back to shopping -->
    <a href="@Url.Action("Index", "Product")" class="btn btn-warning" data-abc="true">
        <i class="fa fa-chevron-left"></i> Alışverişe Geri Dön
    </a>
</div>
