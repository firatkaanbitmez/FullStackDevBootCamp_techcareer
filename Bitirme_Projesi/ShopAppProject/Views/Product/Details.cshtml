<!--Product/Details cshtml-->
@model Product

@{
    ViewData["Title"] = "Ürün Detayları";
}

<div class="container mt-5">
    <h2>@Model.Name</h2>
    <div class="row">
        <div class="col-md-4">
            <img src="https://via.placeholder.com/200" class="img-fluid" alt="Ürün Resmi">
        </div>
        <div class="col-md-8">
            <p>@Model.Description</p>
            <p><strong>Fiyat:</strong> $@Model.Price</p>
            <a href="#" class="btn btn-success">Sepete Ekle</a>
        </div>
    </div>
</div>
